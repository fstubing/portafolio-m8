    <div class="container mx-auto my-5" id="destacados"><h2>PRODUCTOS DESTACADOS</h2></div>

    <div class="container contenedor-cards row row-cols-1 row-cols-md-2 g-4 mb-5 mx-auto" id="productos">
      {{#each productos}}
      <div class="col">
        <div class="card h-100">
          <a href="/detalleProducto/{{id}}"><img src="../public/img/{{imagen1}}" class="card-img-top" alt="imagen {{nombre}}"></a>  
          <div class="card-body">
            <h5 class="card-title"><a href="/detalleProducto/{{id}}">{{nombre}}</a></h5>
            <H4 class="card-title">${{precio}} CLP</H4>

          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><p class="card-text">{{marca}}</p></li>
            <li class="list-group-item"><button class="btn btn-primary" onclick="addToCart('{{id}}')">AGREGAR AL CARRITO</button></li>
          </ul>
        </div>
      </div>
      {{/each}}

