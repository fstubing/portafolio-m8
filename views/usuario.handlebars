{{>navbar}}


  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="../public/img/user.png" class="img-fluid rounded-start" alt="foto usuario">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">DATOS DEL USUARIO</h5>
          <p class="card-text">
            {{#each arrayUser}}
            <ul>
              <li>ID: <b>{{this.id}}</b></li>
              <li>Categoría Usuario: <b>{{clase}}</b></li>
              <li>Nombre: <b>{{nombre}}</b></li>
              <li>Apellido: <b>{{apellido}}</b></li>
              <li>Email: <b>{{email}}</b></li>
            </ul>

            {{/each}}
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <hr>
  <section class="container">
    <div class="card my-4">
      <h5 class="card-header">BUSCADOR</h5>
      <div class="card-body">
        <h5 class="card-title">Busca ventas y productos</h5>
        <p class="card-text">Entrega detalles de todas las ventas y productos o uno en específico</p>
        <a href="" class="btn btn-primary" id="buscador">Ir al buscador</a>
      </div>
    </div>
    <div class="card my-4">
      <h5 class="card-header">INVENTARIO PRODUCTOS</h5>
      <div class="card-body">
        <h5 class="card-title">CRUD de productos</h5>
        <p class="card-text">Da la posibilidad de ver, agregar, modificar o borrar productos del inventario</p>
        <a href="" class="btn btn-primary" id="inventario">Ir al inventario</a>
      </div>
    </div>
  </section>

    


