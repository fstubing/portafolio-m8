{{>navbar}}


    <section class="container" style="min-height: 60vh;">
{{#if carrito}}
      <div class="row">
        <div class="col-sm-12 col-md-8">
          <h3>CARRITO DE COMPRAS</h3>
        </div>
        
        <div class="col-sm-12 col-md-4">
          
          <button class="btn btn-danger" id="btn-vaciar">Vaciar Carro</button>
          
        </div>
      </div>
      <div class="row">
        <div class="col" id="productos-carrito">
          {{#each carrito}}
          <div class="row m-3 p-carro">
            <div class="col-sm-12 col-md-4"><img class="img-carro" src="../public/img/{{imagen1}}" alt="{{nombre}}"></div>
            <div class="col-sm-6 col-md-4">
              <p>{{nombre}}</p>
              <p>Stock: {{stock}}</p>
              <p>Precio Unitario ${{precio}}</p>
              <P>
                <button onclick="restar('{{id}}')" class="btn btn-info">-</button>
                <input type="number" value="{{cantidad}}" min="0" max="{{stock}}" id="cantidad-carro">
                <button onclick="sumar('{{id}}')" class="btn btn-info my-1">+</button>
              </P>
            </div>
            <div class="col-sm-6 col-md-4">
              <p>Precio <b>${{total}}</b></p>
            </div>
          </div>

          {{/each}}
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 col-md-8">
          {{!-- <form action="" method="get">
            <label for="cupon">Cupón de descuento</label>
            <input type="" id="input-cupon">
            <input type="button" value="aplicar" class="btn btn-success" id="btn-descuento">
          </form> --}}
        </div>
        <div class="col-sm-12 col-md-4">
          {{#each subt}}
          <p class="text-white bg-dark">Total: $<span id="subtotal">{{total}}</span></p>
    
          {{!-- <p id="descuento" class="text-success"></p>
          <h5 id="precio-total"></h5> --}}
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-md-8">
          <button class="btn btn-warning my-1"><a href="/">continuar comprando</a></button>
        </div>
        <div class="col-sm-6 col-md-4">
          <button class="btn btn-primary my-1" onclick="btnComprarAhora('{{id}}')">Finalizar compra</button>
        </div>{{/each}}
      </div>
      <div class="row"></div>
{{else}}
<div class="d-flex flex-column mt-5">
      <br><br><br><br>
      <hr>
      <h3 class="my-5 d-flex align-items-center justify-content-center">NO HAY PRODUCTOS EN EL CARRO</h3>
      <hr>
</div>
{{/if}}
    </section>

