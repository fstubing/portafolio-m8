{{>navbar}}


  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="../public/img/user.png" class="img-fluid rounded-start" alt="foto usuario">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">DATOS DEL USUARIO</h5>
          <p class="card-text">
            {{#each arrayUser}}
            <ul>
              <li>ID: <b>{{this.id}}</b></li>
              <li>Categoría Usuario: <b>{{clase}}</b></li>
              <li>Nombre: <b>{{nombre}}</b></li>
              <li>Apellido: <b>{{apellido}}</b></li>
              <li>Email: <b>{{email}}</b></li>
            </ul>

            {{/each}}
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <hr class="my-3">
  <section class="container">
    <h3 class="text-decoration-underline text-center mb-3">MIS COMPRAS</h3>
        <section id="infoSelector">
            Orden:
            <select name="optionOrden" id="optionOrden" autofocus>
                <option value="desc">Más reciente</option>
                <option value="asc">Más antigua</option>
            </select>
            <p class="mt-3">Al dar click en 'Ver' se desplegará información en la tabla conforme a los parámetros requeridos: </p>
            <button class="btn btn-primary" id="btnSiguiente" {{#each arrayUser}}onclick="btnMostrarVentas({{id}})"{{/each}}>Ver</button>
        </section>
        <table class="table table-striped">
            <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Id Venta</th>
                  <th scope="col">Id Comprador</th>
                  <th scope="col">Fecha</th>
                  <th scope="col">Precio Total</th>
                  <th scope="col">Productos Vendidos</th>
                </tr>
            </thead>
            <tbody id="receptorFilas">
            </tbody>
        </table>
  </section>

          <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel"></h1>
                <button type="button" class="btn-close btnCerrarModal" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table" id="tablaModal">
                        <thead id="tableHeaders">
            
                        </thead>
                        <tbody id="tableBody">
             
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btnCerrarModal" data-bs-dismiss="modal" id="btnCerrarModal">Cerrar</button>
                </div>
            </div>
            </div>
        </div>




    


